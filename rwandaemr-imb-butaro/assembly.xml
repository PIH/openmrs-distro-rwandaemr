<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>${artifactId}-${version}</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/distro/web</directory>
            <outputDirectory>openmrs_webapps</outputDirectory>
            <includes>
                <include>**/*.war</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/distro/web/modules</directory>
            <outputDirectory>openmrs_modules</outputDirectory>
            <includes>
                <include>**/*.omod</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/distro/web/frontend</directory>
            <outputDirectory>frontend</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/configuration/frontend</directory>
            <outputDirectory>openmrs_config/frontend</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/configuration</directory>
            <outputDirectory>openmrs_config</outputDirectory>
            <includes>
                <include>addresshierarchy/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/configuration/htmlforms/common</directory>
            <outputDirectory>openmrs_config/htmlforms</outputDirectory>
            <includes>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/configuration/htmlforms/butaro-only</directory>
            <outputDirectory>openmrs_config/htmlforms</outputDirectory>
            <includes>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/configuration/htmlforms/butaro-variants</directory>
            <outputDirectory>openmrs_config/htmlforms</outputDirectory>
            <includes>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
